<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
	  <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to ANIME TALK</h1>

    <h2>
      Where people who like Anime can talk and share thoughts with other Anime fans.
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>
  <%= image_tag("KeyMetalIdol.png")%>
  <%= image_tag("Kiki.png")%>
  <%= image_tag("HeibaneRenmei.png")%>
  <%=  image_tag("BubblegumCrisis_228.png")%>
<% end %>